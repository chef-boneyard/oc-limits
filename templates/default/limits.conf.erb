#
# generated by limits cookbook
# 
# NOTES:
#   * on ubuntu, this will affect only user sessions running under PAM
#   * on ubuntu, calling sudo from runit scripts /will/ invoke these limits, use chpst instead

<% @limits.each do |domain,types| %>
  <% types.each do |type,items| %>
    <% items.each do |item,value| %>
<%= "%-12s %-12s %-12s %-12s" % [ domain == 'star' ? '*' : domain, item, type, value ] %>
    <% end %>
  <% end %>
<% end %>

